<Page x:Class="Ex3_Pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ex3_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded"
      N>

    <Grid Background="DarkSlateGray">

        <Border Margin="10" Background="Gray" CornerRadius="20">
            <StackPanel>
                <TextBlock Name="tblkPageName" Margin="10" Text="Page 2" Foreground="LightGray"/>
                <TextBox Name="tbxUserName" Width="300"/>
                <TextBlock>
                    <Hyperlink Command="NavigationCommands.BrowseBack">
                        Back
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
            </Border>

    </Grid>
    
</Page>
